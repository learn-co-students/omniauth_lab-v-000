
<% if session[:user_id] %>
  <h1><%= @user.name %></h1>
  <h2>Email: <%= @user.email %></h2>
  <h2>UID: <%= @user.uid %></h2>
  <img src="<%= @user.image %>">

  <%= link_to logout_path, {:controller=> "sessions", :action=> "destroy"}, :method => :post%>  
<% else %>
    <%= link_to "Login with Facebook", "/auth/facebook" %>
<% end %>