<%= form_tag ({controller: 'sessions', action: 'create'}) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :password %>
    <%= f.password_field :password %> 

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %> 

    <%= f.submit %>
<% end %>


